import Layout from './GlobalLayout.astro'
import PageHeader from '../components/PageHeader.astro'

import calendar from 'feather-icons/dist/icons/calendar.svg'
import clock from 'feather-icons/dist/icons/clock.svg'

const dateFormatter = new Intl.DateTimeFormat('en-GB', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
})

const { title, description, date, readingTime } = Astro.props.frontmatter
---
<Layout title={`${title} - cynthia's blog`} description={description}>
  <div class='blog-wrapper'>
    <PageHeader>
      <Fragment>{title}</Fragment>
      <div class='blog-info' slot='subtitle'>
        <div class='blog-info-item'>
          <img src={calendar} alt='Calendar icon'/>
          <time datetime={date.slice(0, 10)}>{dateFormatter.format(new Date(date))}</time>
        </div>
        <div class='blog-info-item'>
          <img src={clock} alt='Calendar icon'/>
          <span>{readingTime}</span>
        </div>
      </div>
    </PageHeader>
    <div class='blog-contents'>
      <slot/>
    </div>
    <hr/>
    <div class='blog-license'>
      Written with love by Cynthia. Contents of this blog are licensed under a <a href='https://creativecommons.org/licenses/by-sa/4.0/' target='_blank' rel='noreferrer'>Creative Commons Attribution-ShareAlike 4.0 International License</a>,
      unless stated otherwise. A link to the original blog post suffice as attribution.
    </div>
  </div>
</Layout>

<style>
  .blog-wrapper {
    text-transform: initial;
  }

  .blog-info {
    display: flex;
    gap: 32px;
  }

  .blog-info-item {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .blog-contents :global(:is(h2, h3, h4, h5, h6)) {
    margin-bottom: .05em;
    border-bottom: .15em solid #f49898;
    margin-top: 1rem;
    width: fit-content;
    font-weight: 500;
  }

  .blog-contents :global(h2) {
    font-size: 1.5em;
  }

  .blog-contents :global(h3) {
    font-size: 1.3em;
  }

  .blog-contents :global(h4) {
    font-size: 1.1em;
  }

  .blog-contents :global(h5) {
    font-size: 1em;
  }

  .blog-contents :global(h6) {
    font-size: .9em;
  }

  .blog-contents :global(.astro-code) {
    padding: 16px;
  }

  .blog-license {
    font-size: 0.85em;
  }

  .blog-license a {
    text-decoration: underline;
  }

  .blog-license a::before, .blog-license a::after {
    display: none;
  }

  @media (prefers-color-scheme: dark) {
    .blog-info-item img {
      filter: invert();
    }
  }
</style>
