<div id='activity' class='activity-widget hidden'>
  <h3 id='activity-title'>I'm currently listening to</h3>
  <div id='activity-name'></div>
  <div id='activity-detail'></div>
</div>

<style>
  .activity-widget {
    display: none;
    position: fixed;
    bottom: 16px;
    right: 16px;
    text-align: right;
    opacity: 1;
    width: 230px;
    transition: opacity .3s, right .3s;
    user-select: none;
  }

  .activity-widget div {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    line-height: 1.25em;
  }

  .activity-widget h3 {
    margin: 0;
    font-weight: 400;
    font-size: 0.85rem;
  }

  .activity-widget b {
    font-weight: 400;
  }

  .activity-widget.hidden {
    right: -16px;
    opacity: 0;
  }

  @media (min-width: 1160px) {
    .activity-widget {
      display: block;
    }
  }
</style>

<script>
  type Activity = { playing: boolean, name: string, artist: string }

  const widget = document.getElementById('activity')!
  // const title = document.getElementById('activity-title')!
  const name = document.getElementById('activity-name')!
  const detail = document.getElementById('activity-detail')!

  function onMessage (activity: Activity) {
    if (!activity.playing) {
      widget.classList.add('hidden')
      return
    }

    widget.classList.remove('hidden')
    name.innerText = name.title = activity.name
    detail.innerText = detail.title = 'by ' + activity.artist
  }

  function connect () {
    const ws = new WebSocket('wss://cynthia.rest/activity')
    ws.addEventListener('message', (e) => onMessage(JSON.parse(e.data)))
    ws.addEventListener('close', () => setTimeout(connect, 250))
  }

  connect()
</script>
